generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../ERD.svg"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int                @id @default(autoincrement())
  name             String?
  email            String             @unique
  emailVerified    DateTime?
  password         String?
  roleID           BigInt?
  organizationId   Int?
  image            String             @default("/uploads/ProfilePics/default.png")
  BlueSky_Access   BlueSky_Access[]
  facebookAccesses Facebook_Access[]
  Instagram_Access Instagram_Access[]
  memberships      Membership[]
  posts            Post[]             @relation("UserPosts")
  tikTokAccesses   TikTok_Access[]
  Organization     Organization?      @relation(fields: [organizationId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Role             Role?              @relation(fields: [roleID], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Organization {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  plan        String
  memberships Membership[]
  posts       Post[]
  User        User[]
}

model Membership {
  id             Int          @id @default(autoincrement())
  userId         Int
  organizationId Int
  role           String
  organization   Organization @relation(fields: [organizationId], references: [id])
  user           User         @relation(fields: [userId], references: [id])

  @@unique([userId, organizationId])
}

model Post {
  id             Int          @id @default(autoincrement())
  organizationId Int
  authorId       Int
  title          String
  body           String
  status         String
  creatorId      Int          @default(0)
  mediaBase64    String?
  category       String       @default("Otro")
  visible        Boolean      @default(false)
  medias         Media[]
  metrics        Metric[]
  author         User         @relation("UserPosts", fields: [authorId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  schedule       Schedule?
  variants       Variant[]
}

model Schedule {
  id       Int      @id @default(autoincrement())
  postId   Int      @unique
  runAt    DateTime
  timezone String
  post     Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Variant {
  id        Int       @id @default(autoincrement())
  postId    Int
  network   String
  text      String
  status    String
  date_sent DateTime? @db.Date
  time_sent DateTime? @db.Time(6)
  uri       String?
  permalink String?
  Metric    Metric[]
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Metric {
  id          Int      @id @default(autoincrement())
  postId      Int
  network     String
  likes       Int      @default(0)
  comments    Int      @default(0)
  shares      Int      @default(0)
  impressions Int      @default(0)
  collectedAt DateTime @default(now())
  variantId   Int
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  Variant     Variant  @relation(fields: [variantId], references: [id], onDelete: Cascade)
}

model RedSocial {
  id               Int                @id @default(autoincrement())
  nombre           String             @unique
  BlueSky_Access   BlueSky_Access[]
  facebookAccesses Facebook_Access[]
  Instagram_Access Instagram_Access[]
  tikTokAccesses   TikTok_Access[]
}

model BlueSky_Access {
  id            Int       @id(map: "CuentaRedSocial_pkey") @unique @default(autoincrement())
  usuarioId     Int
  redSocialId   Int       @default(1)
  nombreUsuario String
  appPassword   String
  follows       Int?
  metricaB      Int?
  avatar        String?
  linkedAt      DateTime  @default(now()) @db.Timestamp(6)
  updatedAt     DateTime  @default(now()) @db.Timestamp(6)
  displayName   String
  handle        String    @default("RETRIEVING")
  RedSocial     RedSocial @relation(fields: [redSocialId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  User          User      @relation(fields: [usuarioId], references: [id], map: "CuentaRedSocial_usuarioId_fkey")

  @@unique([usuarioId, redSocialId], map: "CuentaRedSocial_usuarioId_redSocialId_key")
}

model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Instagram_Access {
  id          BigInt    @id @default(autoincrement())
  userId      Int
  redSocial   Int       @default(2)
  usuarioRed  String
  accessToken String?
  follows     Int?
  metricaB    Int?
  avatar      String?
  linkedAt    DateTime  @default(now()) @db.Timestamp(6)
  updatedAt   DateTime  @default(now()) @db.Timestamp(6)
  RedSocial   RedSocial @relation(fields: [redSocial], references: [id], onDelete: NoAction, onUpdate: NoAction)
  User        User      @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Role {
  id     BigInt @id @default(autoincrement())
  nombre String
  User   User[]
}

model Media {
  id             Int       @id @default(autoincrement())
  postId         Int
  url            String
  type           MediaType
  mime           String
  width          Int?
  height         Int?
  duration       Int?
  size           Int?
  createdAt      DateTime  @default(now())
  originalBase64 String?
  mediaLocation  String
  mediaOrder     Int       @default(1)
  post           Post      @relation(fields: [postId], references: [id])
}

model Facebook_Access {
  id          BigInt    @id @default(autoincrement())
  userId      Int
  redSocial   Int       @default(3)
  usuarioRed  String
  accessToken String?
  follows     Int?
  metricaB    Int?
  avatar      String?
  linkedAt    DateTime  @default(now()) @db.Timestamp(6)
  updatedAt   DateTime  @default(now()) @db.Timestamp(6)
  RedSocial   RedSocial @relation(fields: [redSocial], references: [id], onDelete: NoAction, onUpdate: NoAction)
  User        User      @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model TikTok_Access {
  id           BigInt    @id @default(autoincrement())
  userId       Int
  redSocial    Int       @default(4)
  accessToken  String
  createdAt    DateTime  @default(now())
  expiresIn    Int?
  openId       String
  refreshToken String?
  updatedAt    DateTime  @updatedAt
  usuarioRed   String    @default("RETRIEVING")
  follows      Int?
  metricaB     Int?
  avatar       String?
  RedSocial    RedSocial @relation(fields: [redSocial], references: [id])
  User         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, redSocial])
}

enum MediaType {
  IMAGE
  VIDEO
}
